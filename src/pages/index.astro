---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout>
  <Navigation />
</Layout>

<style>
  body {
    font-family: 'Open Sans', Arial, Helvetica, sans-serif;
    background: #fff;
    color: #000;
    line-height: 1.5;
    max-width: 1366px;
    width: calc(100vw - 64px);
    margin: auto;
  }

  h1 {
    font-size: 80px;
    font-weight: 500;
    line-height: 1.25em;
    margin: 0px;
    color: #1a1a1a;
  }

  h2 {
    font-size: 56px;
    font-weight: 500;
    line-height: 1.25em;
    padding-bottom: 56px;
    color: #1a1a1a;
  }

  .large-body {
    font-size: 24px;
    font-weight: 400;
    line-height: 1.5;
    padding-bottom: 40px;
    color: #4a4a4a;
  }

  .small-body {
    font-size: 18px;
    font-weight: 400;
    line-height: 1.5;
    margin-left: 16px;
    color: #4a4a4a;
  }

  .small-body-decoration {
    border-left: #0c56bc 2px solid;
    margin: 24px 0px;
  }

  nav a {
    color: #0c56bc;
    font-weight: 500;
    text-decoration: none;
    position: relative;
  }

  nav .main-menu a::after {
    content: '';
    position: absolute;
    background-color: #0c56bc;

    left: 0;
    bottom: -4px;

    height: 1.5px;
    width: 24px;

    transition-property: width;
    transition-duration: 0.3s;
    transition-timing-function: ease-out;
  }
  nav a:hover {
    color: #00308f;
  }

  nav a:hover::after {
    width: 100%;
    color: #00308f;
    background-color: #00308f;
  }

  /* Języki */

  nav .lang a::after {
    content: '';
    position: absolute;
    background-color: #0c56bc;

    left: 0;
    bottom: -4px;

    height: 1.5px;
    width: 50%;

    transition-property: width;
    transition-duration: 0.3s;
    transition-timing-function: ease-out;
  }

  nav a:hover {
    color: #00308f;
  }

  nav a:hover::after {
    width: 100%;
    color: #00308f;
    background-color: #00308f;
  }

  /* Wybrany język */

  nav .choosen a {
    color: #000;
  }

  nav .choosen a::after {
    background-color: #000;

    width: 100%;
  }

  nav label {
    display: none;
  }

  ul {
    list-style: none;
  }

  /* Navigation */

  .main-nav {
    align-items: center;
    padding-top: 40px;
  }

  .main-nav .logo {
    height: 24px;
    margin-bottom: 24px;
  }

  .main-nav ul {
    display: flex;
    gap: 24px;
  }

  .main-nav ul li {
    display: flex;
    gap: 24px;
  }

  .main-nav ul li a {
    margin: 8px 0px;
  }

  /* Header */
</style>
