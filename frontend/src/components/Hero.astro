---
import H1 from '../components/H1.astro';
---

<header class="grid-2-col">
  <section>
    <H1>Próba</H1>
    <h1>Regeneracja siłowników hydraulicznych do&nbspkabrioletów</h1>
    <a class="chevron" href="/gallery"
      >Zobacz zrealizowane projekty<i class="fas fa-chevron-right"></i>
    </a>
  </section>
  <img src="img/header.svg" alt="" />
</header>

<style lang="scss">
  @import '../../styles/sass/base/mixins';

  header {
    width: 100%;
    height: 75vh;
    align-items: center;
    justify-content: baseline;

    // Grid
    @include breakpoint(tablet) {
      padding: 64px 0;
    }

    section {
      flex: 1;

      @include breakpoint(tablet) {
        order: 2;
        max-width: none;
      }

      h1 {
        margin: 16px 0;
      }
    }

    img {
      width: 100%;
      opacity: 0.7;
      object-fit: cover;
    }
  }
</style>
